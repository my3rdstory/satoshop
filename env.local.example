# 로컬 개발 환경 설정 (.env.local)
# 이 파일을 .env.local로 복사하여 로컬 개발에 사용하세요

# Django 설정
SECRET_KEY=your-local-secret-key-here
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# 로컬 데이터베이스 설정
DB_NAME=satoshop-dev
DB_USER=postgres
DB_PASSWORD=your-local-db-password
DB_HOST=localhost
DB_PORT=5432

# 라이트닝 인증 설정 (로컬 개발)
# ngrok 사용 시
NGROK_DOMAIN=your-ngrok-subdomain.ngrok-free.app
LNURL_AUTH_ROOT_DOMAIN=your-ngrok-subdomain.ngrok-free.app
# LNURL_DOMAIN=your-ngrok-subdomain.ngrok-free.app  # 기존 호환성용

# 또는 localhost 사용 시
# LNURL_AUTH_ROOT_DOMAIN=localhost:8000
# LNURL_DOMAIN=localhost:8000  # 기존 호환성용

LNURL_AUTH_K1_TIMEOUT=3600

# 블링크 API (테스트용)
BLINK_API_KEY=your-test-api-key
BLINK_WALLET_ID=your-test-wallet-id

# S3 설정 (로컬 개발용 - 선택사항)
# S3_ACCESS_KEY_ID=your-dev-access-key
# S3_SECRET_ACCESS_KEY=your-dev-secret-key
# S3_BUCKET_NAME=your-dev-bucket
# S3_ENDPOINT_URL=https://your-dev-endpoint.com 