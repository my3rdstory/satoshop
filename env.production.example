# 운영 환경 설정 (.env.production)
# 렌더 또는 다른 운영 서버에서 사용

# Django 설정
SECRET_KEY=your-production-secret-key-here
DEBUG=False
ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com

# 운영 데이터베이스 설정
DB_NAME=satoshop-production
DB_USER=postgres
DB_PASSWORD=your-production-db-password
DB_HOST=your-production-db-host
DB_PORT=5432

# 라이트닝 인증 설정 (운영)
LNURL_AUTH_ROOT_DOMAIN=yourdomain.com
# LNURL_DOMAIN=yourdomain.com  # 기존 호환성용 (LNURL_AUTH_ROOT_DOMAIN과 동일)
LNURL_AUTH_K1_TIMEOUT=3600

# 블링크 API (운영용)
BLINK_API_KEY=your-production-api-key
BLINK_WALLET_ID=your-production-wallet-id

# S3 설정 (운영용)
S3_ACCESS_KEY_ID=your-production-access-key
S3_SECRET_ACCESS_KEY=your-production-secret-key
S3_BUCKET_NAME=your-production-bucket
S3_ENDPOINT_URL=https://your-production-endpoint.com
S3_REGION_NAME=kr-standard
S3_USE_SSL=True
S3_FILE_OVERWRITE=False
S3_CUSTOM_DOMAIN=your-production-domain.com

# 핫링크 보호 설정
HOTLINK_PROTECTION_ENABLED=True
HOTLINK_ALLOWED_DOMAINS=trusted-partner.com

# Gmail 이메일 설정 (운영용)
EMAIL_HOST_USER=your-production-email@gmail.com
EMAIL_HOST_PASSWORD=your-production-gmail-app-password
DEFAULT_FROM_EMAIL=your-production-email@gmail.com 