# Django 설정
SECRET_KEY=your-secret-key-here
DEBUG=False
ALLOWED_HOSTS=localhost,127.0.0.1,yourdomain.com

# 데이터베이스 설정
DB_NAME=satoshop-main
DB_USER=postgres
DB_PASSWORD=your-db-password
DB_HOST=localhost
DB_PORT=5432

# PostgreSQL Docker 설정 (개발용)
POSTGRES_DB=satoshop-main
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your-db-password

# S3 오브젝트 스토리지 설정
S3_ACCESS_KEY_ID=your-access-key
S3_SECRET_ACCESS_KEY=your-secret-key
S3_BUCKET_NAME=your-bucket-name
S3_ENDPOINT_URL=https://your-endpoint.com
S3_REGION_NAME=kr-standard
S3_USE_SSL=True
S3_FILE_OVERWRITE=False
S3_CUSTOM_DOMAIN=your-custom-domain.com

# 핫링크 보호 설정 (이미지 외부 사용 방지)
HOTLINK_PROTECTION_ENABLED=True
HOTLINK_ALLOWED_DOMAINS=trusted-partner.com,cdn.example.com 

# Gmail 이메일 설정
EMAIL_HOST_USER=satoshopkr@gmail.com
EMAIL_HOST_PASSWORD=your-gmail-app-password
DEFAULT_FROM_EMAIL=satoshopkr@gmail.com

# LNURL-auth 설정 (lnauth-django 호환)
BLINK_API_KEY=your-api-key
BLINK_WALLET_ID=your-wallet-id

# 라이트닝 인증 도메인 설정
# 로컬 개발: localhost:8000 또는 ngrok 도메인
# 개발 서버: dev.yourdomain.com
# 운영 서버: yourdomain.com
LNURL_AUTH_ROOT_DOMAIN=localhost:8000
# LNURL_DOMAIN=localhost:8000  # 기존 호환성용 (LNURL_AUTH_ROOT_DOMAIN과 동일)
LNURL_AUTH_K1_TIMEOUT=3600

# ngrok 사용 시 (로컬 개발용)
# NGROK_DOMAIN=your-ngrok-subdomain.ngrok-free.app
# LNURL_AUTH_ROOT_DOMAIN=your-ngrok-subdomain.ngrok-free.app
# LNURL_DOMAIN=your-ngrok-subdomain.ngrok-free.app  # 기존 호환성용

