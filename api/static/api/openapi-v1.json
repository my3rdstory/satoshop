{
  "openapi": "3.0.0",
  "info": {
    "title": "SatoShop External API",
    "version": "1.0.0",
    "description": "스토어 목록 및 공개 리소스 제공 API"
  },
  "servers": [
    {
      "url": "/api/v1"
    }
  ],
  "paths": {
    "/": {
      "get": {
        "summary": "API 목록",
        "description": "사용 가능한 API 엔드포인트 목록을 반환",
        "responses": {
          "200": {
            "description": "성공",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "version": {
                      "type": "string"
                    },
                    "endpoints": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "path": {
                            "type": "string"
                          },
                          "method": {
                            "type": "string"
                          },
                          "description": {
                            "type": "string"
                          }
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/stores/": {
      "get": {
        "summary": "활성 스토어 목록",
        "description": "활성 스토어와 공개 리소스를 반환",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "responses": {
          "200": {
            "description": "성공",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "stores": {
                      "type": "array",
                      "items": {
                        "$ref": "#/components/schemas/Store"
                      }
                    }
                  }
                }
              }
            }
          },
          "401": {
            "description": "인증 실패"
          },
          "403": {
            "description": "비활성 키 또는 차단"
          }
        }
      }
    },
    "/stores/{store_id}/owner/": {
      "get": {
        "summary": "스토어 주인장 정보",
        "description": "스토어별 주인장 공개 정보를 반환",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "parameters": [
          {
            "name": "store_id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "성공",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/StoreOwner"
                }
              }
            }
          },
          "401": {
            "description": "인증 실패"
          },
          "403": {
            "description": "비활성 키 또는 차단"
          },
          "404": {
            "description": "스토어 없음"
          }
        }
      }
    },
