{
  "openapi": "3.0.3",
  "info": {
    "title": "SatoShop External API",
    "version": "1.0.0",
    "description": "스토어 목록, 아이템, 주문 생성 API"
  },
  "servers": [
    { "url": "/api/v1" }
  ],
  "paths": {
    "/": {
      "get": {
        "summary": "API 목록",
        "description": "사용 가능한 API 엔드포인트 목록을 반환",
        "responses": {
          "200": {
            "description": "성공",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "version": { "type": "string" },
                    "endpoints": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "path": { "type": "string" },
                          "method": { "type": "string" },
                          "description": { "type": "string" }
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/csrf/": {
      "get": {
        "summary": "CSRF 쿠키 발급",
        "description": "브라우저(예: Vite 개발 서버)에서 POST 요청을 테스트하기 위한 CSRF 쿠키(csrftoken)를 발급한다. 먼저 이 엔드포인트를 credentials 포함으로 호출한 뒤, 이후 POST 요청에 X-CSRFToken 헤더를 포함해야 한다.",
        "responses": {
          "200": { "description": "CSRF 쿠키 발급 성공" },
          "403": { "description": "허용되지 않은 Origin/IP" }
        }
      }
    },
    "/notices/": {
      "get": {
        "summary": "공지사항 목록",
        "description": "활성 공지사항 목록을 반환",
        "security": [{ "bearerAuth": [] }],
        "responses": {
          "200": {
            "description": "성공",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "notices": {
                      "type": "array",
                      "items": { "$ref": "#/components/schemas/NoticeSummary" }
                    }
                  }
                }
              }
            }
          },
          "401": { "description": "인증 실패" },
          "403": { "description": "비활성 키 또는 차단" }
        }
      }
    },
    "/notices/{notice_id}/": {
      "get": {
        "summary": "공지사항 상세",
        "description": "공지사항 단건 상세를 반환",
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          { "name": "notice_id", "in": "path", "required": true, "schema": { "type": "integer" } }
        ],
        "responses": {
          "200": {
            "description": "성공",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/NoticeDetail" }
              }
            }
          },
          "401": { "description": "인증 실패" },
          "403": { "description": "비활성 키 또는 차단" },
          "404": { "description": "공지사항 없음" }
        }
      }
    },
    "/stores/": {
      "get": {
        "summary": "활성 스토어 목록",
        "description": "활성 스토어와 공개 리소스를 반환",
        "security": [{ "bearerAuth": [] }],
        "responses": {
          "200": {
            "description": "성공",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "stores": {
                      "type": "array",
                      "items": { "$ref": "#/components/schemas/Store" }
                    }
                  }
                }
              }
            }
          },
          "401": { "description": "인증 실패" },
          "403": { "description": "비활성 키 또는 차단" }
        }
      }
    },
    "/stores/{store_id}/owner/": {
      "get": {
        "summary": "스토어 주인장 정보",
        "description": "스토어별 주인장 공개 정보를 반환",
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          {
            "name": "store_id",
            "in": "path",
            "required": true,
            "schema": { "type": "string" }
          }
        ],
        "responses": {
          "200": {
            "description": "성공",
            "content": {
              "application/json": { "schema": { "$ref": "#/components/schemas/StoreOwner" } }
            }
          },
          "401": { "description": "인증 실패" },
          "403": { "description": "비활성 키 또는 차단" },
          "404": { "description": "스토어 없음" }
        }
      }
    },
    "/stores/{store_id}/products/": {
      "get": {
        "summary": "스토어별 활성 상품",
        "description": "스토어의 활성 상품 목록을 반환",
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          { "name": "store_id", "in": "path", "required": true, "schema": { "type": "string" } }
        ],
        "responses": {
          "200": {
            "description": "성공",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "store": { "$ref": "#/components/schemas/StoreShort" },
                    "items": { "type": "array", "items": { "$ref": "#/components/schemas/Product" } }
                  }
                }
              }
            }
          },
          "401": { "description": "인증 실패" },
          "403": { "description": "비활성 키 또는 차단" },
          "404": { "description": "스토어 없음" }
        }
      }
    },
    "/stores/{store_id}/meetups/": {
      "get": {
        "summary": "스토어별 활성 밋업",
        "description": "스토어의 활성 밋업 목록을 반환",
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          { "name": "store_id", "in": "path", "required": true, "schema": { "type": "string" } }
        ],
        "responses": {
          "200": {
            "description": "성공",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "store": { "$ref": "#/components/schemas/StoreShort" },
                    "items": { "type": "array", "items": { "$ref": "#/components/schemas/Meetup" } }
                  }
                }
              }
            }
          },
          "401": { "description": "인증 실패" },
          "403": { "description": "비활성 키 또는 차단" },
          "404": { "description": "스토어 없음" }
        }
      }
    },
    "/stores/{store_id}/live-lectures/": {
      "get": {
        "summary": "스토어별 활성 라이브 강의",
        "description": "스토어의 활성 라이브 강의 목록을 반환",
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          { "name": "store_id", "in": "path", "required": true, "schema": { "type": "string" } }
        ],
        "responses": {
          "200": {
            "description": "성공",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "store": { "$ref": "#/components/schemas/StoreShort" },
                    "items": { "type": "array", "items": { "$ref": "#/components/schemas/LiveLecture" } }
                  }
                }
              }
            }
          },
          "401": { "description": "인증 실패" },
          "403": { "description": "비활성 키 또는 차단" },
          "404": { "description": "스토어 없음" }
        }
      }
    },
    "/stores/{store_id}/digital-files/": {
      "get": {
        "summary": "스토어별 활성 디지털 파일",
        "description": "스토어의 활성 디지털 파일 목록을 반환",
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          { "name": "store_id", "in": "path", "required": true, "schema": { "type": "string" } }
        ],
        "responses": {
          "200": {
            "description": "성공",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "store": { "$ref": "#/components/schemas/StoreShort" },
                    "items": { "type": "array", "items": { "$ref": "#/components/schemas/DigitalFile" } }
                  }
                }
              }
            }
          },
          "401": { "description": "인증 실패" },
          "403": { "description": "비활성 키 또는 차단" },
          "404": { "description": "스토어 없음" }
        }
      }
    },
    "/stores/{store_id}/orders/": {
      "post": {
        "summary": "스토어별 상품 주문 생성",
        "description": "장바구니 없이 상품 목록을 받아 주문을 생성",
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          { "name": "store_id", "in": "path", "required": true, "schema": { "type": "string" } }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "buyer_name": { "type": "string" },
                  "buyer_phone": { "type": "string" },
                  "buyer_email": { "type": "string", "format": "email" },
                  "shipping_postal_code": { "type": "string" },
                  "shipping_address": { "type": "string" },
                  "shipping_detail_address": { "type": "string" },
                  "order_memo": { "type": "string" },
                  "payment_id": { "type": "string" },
                  "mark_as_paid": { "type": "boolean" },
                  "items": {
                    "type": "array",
                    "items": {
                      "type": "object",
                      "properties": {
                        "product_id": { "type": "integer" },
                        "quantity": { "type": "integer", "minimum": 1 }
                      },
                      "required": ["product_id", "quantity"]
                    },
                    "minItems": 1
                  }
                },
                "required": [
                  "buyer_name",
                  "buyer_phone",
                  "buyer_email",
                  "shipping_postal_code",
                  "shipping_address",
                  "shipping_detail_address",
                  "items"
                ]
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "주문 생성 성공",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "order_id": { "type": "integer" },
                    "order_number": { "type": "string" },
                    "status": { "type": "string" },
                    "subtotal": { "type": "integer" },
                    "shipping_fee": { "type": "integer" },
                    "total_amount": { "type": "integer" },
                    "paid_at": { "type": ["string", "null"], "format": "date-time" },
                    "items": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "product_id": { "type": "integer" },
                          "title": { "type": "string" },
                          "unit_price": { "type": "integer" },
                          "quantity": { "type": "integer" },
                          "line_total": { "type": "integer" }
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "400": { "description": "잘못된 요청" },
          "401": { "description": "인증 실패" },
          "403": { "description": "비활성 키 또는 차단" },
          "404": { "description": "스토어 없음" }
        }
      }
    },
    "/stores/{store_id}/meetups/{meetup_id}/orders/": {
      "post": {
        "summary": "스토어별 밋업 주문 생성",
        "description": "참가자 정보를 받아 밋업 주문을 생성",
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          { "name": "store_id", "in": "path", "required": true, "schema": { "type": "string" } },
          { "name": "meetup_id", "in": "path", "required": true, "schema": { "type": "integer" } }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "participant_name": { "type": "string" },
                  "participant_email": { "type": "string", "format": "email" },
                  "participant_phone": { "type": "string" },
                  "selected_options": {
                    "type": "array",
                    "items": {
                      "type": "object",
                      "properties": {
                        "option_id": { "type": "integer" },
                        "choice_id": { "type": "integer" },
                        "additional_price": { "type": "integer" }
                      },
                      "required": ["option_id", "choice_id"]
                    }
                  },
                  "payment_id": { "type": "string" },
                  "mark_as_paid": { "type": "boolean" }
                },
                "required": ["participant_name", "participant_email"]
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "주문 생성 성공",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/MeetupOrderResponse" }
              }
            }
          },
          "400": { "description": "잘못된 요청" },
          "401": { "description": "인증 실패" },
          "403": { "description": "비활성 키 또는 차단" },
          "404": { "description": "스토어 또는 밋업 없음" }
        }
      }
    },
    "/stores/{store_id}/live-lectures/{live_lecture_id}/orders/": {
      "post": {
        "summary": "스토어별 라이브 강의 주문 생성",
        "description": "구매자 정보를 받아 라이브 강의 참가 주문을 생성",
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          { "name": "store_id", "in": "path", "required": true, "schema": { "type": "string" } },
          { "name": "live_lecture_id", "in": "path", "required": true, "schema": { "type": "integer" } }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "buyer_name": { "type": "string" },
                  "buyer_email": { "type": "string", "format": "email" },
                  "buyer_phone": { "type": "string" },
                  "payment_id": { "type": "string" },
                  "mark_as_paid": { "type": "boolean" }
                },
                "required": ["buyer_name", "buyer_email"]
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "주문 생성 성공",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/LiveLectureOrderResponse" }
              }
            }
          },
          "400": { "description": "잘못된 요청" },
          "401": { "description": "인증 실패" },
          "403": { "description": "비활성 키 또는 차단" },
          "404": { "description": "스토어 또는 강의 없음" }
        }
      }
    },
    "/stores/{store_id}/digital-files/{file_id}/orders/": {
      "post": {
        "summary": "스토어별 디지털 파일 주문 생성",
        "description": "구매자 정보를 받아 디지털 파일 주문을 생성",
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          { "name": "store_id", "in": "path", "required": true, "schema": { "type": "string" } },
