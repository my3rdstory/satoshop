        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "buyer_name": { "type": "string" },
                  "buyer_email": { "type": "string", "format": "email" },
                  "buyer_phone": { "type": "string" },
                  "payment_id": { "type": "string" },
                  "mark_as_paid": { "type": "boolean" }
                },
                "required": ["buyer_name", "buyer_email"]
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "주문 생성 성공",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/DigitalFileOrderResponse" }
              }
            }
          },
          "400": { "description": "잘못된 요청" },
          "401": { "description": "인증 실패" },
          "403": { "description": "비활성 키 또는 차단" },
          "404": { "description": "스토어 또는 파일 없음" }
        }
      }
    },
    "/stores/{store_id}/lightning-invoices/": {
      "post": {
        "summary": "스토어 주인장 라이트닝 인보이스 발행",
        "description": "스토어 주인장이 외부 앱 결제용 BOLT11 인보이스를 생성",
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          { "name": "store_id", "in": "path", "required": true, "schema": { "type": "string" } }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "amount_sats": { "type": "integer", "minimum": 1 },
                  "memo": { "type": "string", "maxLength": 120 },
                  "expires_in_minutes": { "type": "integer", "minimum": 1, "default": 15 }
                },
                "required": ["amount_sats"]
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "인보이스 생성 성공",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/LightningInvoice" }
              }
            }
          },
          "400": { "description": "잘못된 요청" },
          "401": { "description": "인증 실패" },
          "403": { "description": "비활성 키, 주인장 아님, 또는 차단" },
          "404": { "description": "스토어 없음" }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer"
      }
    },
    "schemas": {
      "StoreShort": {
        "type": "object",
        "properties": {
          "id": { "type": "integer" },
          "store_id": { "type": "string" },
          "name": { "type": "string" }
        }
      },
      "Owner": {
        "type": "object",
        "properties": {
          "name": { "type": "string" },
          "phone": { "type": "string" },
          "email": { "type": "string" },
          "chat_channel": { "type": "string", "format": "uri" }
        }
      },
      "Product": {
        "type": "object",
        "properties": {
          "id": { "type": "integer" },
          "title": { "type": "string" },
          "thumbnail": { "type": ["string", "null"], "format": "uri" },
          "price": { "type": "integer" },
          "price_currency": { "type": "string" },
          "is_discounted": { "type": "boolean" },
          "discounted_price": { "type": ["integer", "null"] },
          "stock_quantity": { "type": "integer" },
          "is_out_of_stock": { "type": "boolean" },
          "created_at": { "type": "string", "format": "date-time" },
          "updated_at": { "type": "string", "format": "date-time" }
        }
      },
      "Meetup": {
        "type": "object",
        "properties": {
          "id": { "type": "integer" },
          "name": { "type": "string" },
          "date_time": { "type": ["string", "null"], "format": "date-time" },
          "location": { "type": "string" },
          "is_free": { "type": "boolean" },
          "price": { "type": "integer" },
          "is_discounted": { "type": "boolean" },
          "discounted_price": { "type": ["integer", "null"] },
          "status": { "type": "string" },
          "created_at": { "type": "string", "format": "date-time" },
          "updated_at": { "type": "string", "format": "date-time" }
        }
      },
      "LiveLecture": {
        "type": "object",
        "properties": {
          "id": { "type": "integer" },
          "name": { "type": "string" },
          "thumbnail": { "type": ["string", "null"], "format": "uri" },
          "date_time": { "type": ["string", "null"], "format": "date-time" },
          "price_mode": { "type": "string" },
          "price": { "type": "integer" },
          "is_discounted": { "type": "boolean" },
          "discounted_price": { "type": ["integer", "null"] },
          "is_free": { "type": "boolean" },
          "created_at": { "type": "string", "format": "date-time" },
          "updated_at": { "type": "string", "format": "date-time" }
        }
      },
      "DigitalFile": {
        "type": "object",
        "properties": {
          "id": { "type": "integer" },
          "name": { "type": "string" },
          "thumbnail": { "type": ["string", "null"], "format": "uri" },
          "price_mode": { "type": "string" },
          "price": { "type": "integer" },
          "is_discounted": { "type": "boolean" },
          "discounted_price": { "type": ["integer", "null"] },
          "created_at": { "type": "string", "format": "date-time" },
          "updated_at": { "type": "string", "format": "date-time" }
        }
      },
      "Store": {
        "type": "object",
