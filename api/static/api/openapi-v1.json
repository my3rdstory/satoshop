{
  "openapi": "3.0.3",
  "info": {
    "title": "SatoShop External API",
    "version": "1.0.0",
    "description": "스토어 목록, 아이템, 주문 생성 API"
  },
  "servers": [
    { "url": "/api/v1" }
  ],
  "paths": {
    "/": {
      "get": {
        "summary": "API 목록",
        "description": "사용 가능한 API 엔드포인트 목록을 반환",
        "responses": {
          "200": {
            "description": "성공",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "version": { "type": "string" },
                    "endpoints": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "path": { "type": "string" },
                          "method": { "type": "string" },
                          "description": { "type": "string" }
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/stores/": {
      "get": {
        "summary": "활성 스토어 목록",
        "description": "활성 스토어와 공개 리소스를 반환",
        "security": [{ "bearerAuth": [] }],
        "responses": {
          "200": {
            "description": "성공",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "stores": {
                      "type": "array",
                      "items": { "$ref": "#/components/schemas/Store" }
                    }
                  }
                }
              }
            }
          },
          "401": { "description": "인증 실패" },
          "403": { "description": "비활성 키 또는 차단" }
        }
      }
    },
    "/stores/{store_id}/owner/": {
      "get": {
        "summary": "스토어 주인장 정보",
        "description": "스토어별 주인장 공개 정보를 반환",
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          {
            "name": "store_id",
            "in": "path",
            "required": true,
            "schema": { "type": "string" }
          }
        ],
        "responses": {
          "200": {
            "description": "성공",
            "content": {
              "application/json": { "schema": { "$ref": "#/components/schemas/StoreOwner" } }
            }
          },
          "401": { "description": "인증 실패" },
          "403": { "description": "비활성 키 또는 차단" },
          "404": { "description": "스토어 없음" }
        }
      }
    },
    "/stores/{store_id}/products/": {
      "get": {
        "summary": "스토어별 활성 상품",
        "description": "스토어의 활성 상품 목록을 반환",
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          { "name": "store_id", "in": "path", "required": true, "schema": { "type": "string" } }
        ],
        "responses": {
          "200": {
            "description": "성공",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "store": { "$ref": "#/components/schemas/StoreShort" },
                    "items": { "type": "array", "items": { "$ref": "#/components/schemas/Product" } }
                  }
                }
              }
            }
          },
          "401": { "description": "인증 실패" },
          "403": { "description": "비활성 키 또는 차단" },
          "404": { "description": "스토어 없음" }
        }
      }
    },
    "/stores/{store_id}/meetups/": {
      "get": {
        "summary": "스토어별 활성 밋업",
        "description": "스토어의 활성 밋업 목록을 반환",
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          { "name": "store_id", "in": "path", "required": true, "schema": { "type": "string" } }
        ],
        "responses": {
          "200": {
            "description": "성공",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "store": { "$ref": "#/components/schemas/StoreShort" },
                    "items": { "type": "array", "items": { "$ref": "#/components/schemas/Meetup" } }
                  }
                }
              }
            }
          },
          "401": { "description": "인증 실패" },
          "403": { "description": "비활성 키 또는 차단" },
          "404": { "description": "스토어 없음" }
        }
      }
    },
    "/stores/{store_id}/live-lectures/": {
      "get": {
        "summary": "스토어별 활성 라이브 강의",
        "description": "스토어의 활성 라이브 강의 목록을 반환",
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          { "name": "store_id", "in": "path", "required": true, "schema": { "type": "string" } }
        ],
        "responses": {
          "200": {
            "description": "성공",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "store": { "$ref": "#/components/schemas/StoreShort" },
                    "items": { "type": "array", "items": { "$ref": "#/components/schemas/LiveLecture" } }
                  }
                }
              }
            }
          },
          "401": { "description": "인증 실패" },
          "403": { "description": "비활성 키 또는 차단" },
          "404": { "description": "스토어 없음" }
        }
      }
    },
    "/stores/{store_id}/digital-files/": {
      "get": {
        "summary": "스토어별 활성 디지털 파일",
        "description": "스토어의 활성 디지털 파일 목록을 반환",
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          { "name": "store_id", "in": "path", "required": true, "schema": { "type": "string" } }
        ],
        "responses": {
          "200": {
            "description": "성공",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "store": { "$ref": "#/components/schemas/StoreShort" },
                    "items": { "type": "array", "items": { "$ref": "#/components/schemas/DigitalFile" } }
                  }
                }
              }
            }
          },
          "401": { "description": "인증 실패" },
          "403": { "description": "비활성 키 또는 차단" },
          "404": { "description": "스토어 없음" }
        }
      }
    },
    "/stores/{store_id}/orders/": {
      "post": {
        "summary": "스토어별 상품 주문 생성",
        "description": "장바구니 없이 상품 목록을 받아 주문을 생성",
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          { "name": "store_id", "in": "path", "required": true, "schema": { "type": "string" } }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "buyer_name": { "type": "string" },
                  "buyer_phone": { "type": "string" },
                  "buyer_email": { "type": "string", "format": "email" },
                  "shipping_postal_code": { "type": "string" },
                  "shipping_address": { "type": "string" },
                  "shipping_detail_address": { "type": "string" },
                  "order_memo": { "type": "string" },
                  "payment_id": { "type": "string" },
                  "mark_as_paid": { "type": "boolean" },
                  "items": {
                    "type": "array",
                    "items": {
                      "type": "object",
                      "properties": {
                        "product_id": { "type": "integer" },
                        "quantity": { "type": "integer", "minimum": 1 }
                      },
                      "required": ["product_id", "quantity"]
                    },
                    "minItems": 1
                  }
                },
                "required": [
                  "buyer_name",
                  "buyer_phone",
                  "buyer_email",
                  "shipping_postal_code",
                  "shipping_address",
                  "shipping_detail_address",
                  "items"
                ]
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "주문 생성 성공",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "order_id": { "type": "integer" },
                    "order_number": { "type": "string" },
                    "status": { "type": "string" },
                    "subtotal": { "type": "integer" },
                    "shipping_fee": { "type": "integer" },
                    "total_amount": { "type": "integer" },
                    "paid_at": { "type": ["string", "null"], "format": "date-time" },
                    "items": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "product_id": { "type": "integer" },
                          "title": { "type": "string" },
                          "unit_price": { "type": "integer" },
                          "quantity": { "type": "integer" },
                          "line_total": { "type": "integer" }
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "400": { "description": "잘못된 요청" },
          "401": { "description": "인증 실패" },
          "403": { "description": "비활성 키 또는 차단" },
          "404": { "description": "스토어 없음" }
        }
      }
    },
    "/stores/{store_id}/lightning-invoices/": {
      "post": {
        "summary": "스토어 주인장 라이트닝 인보이스 발행",
        "description": "스토어 주인장이 외부 앱 결제용 BOLT11 인보이스를 생성",
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          { "name": "store_id", "in": "path", "required": true, "schema": { "type": "string" } }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "amount_sats": { "type": "integer", "minimum": 1 },
                  "memo": { "type": "string", "maxLength": 120 },
                  "expires_in_minutes": { "type": "integer", "minimum": 1, "default": 15 }
                },
                "required": ["amount_sats"]
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "인보이스 생성 성공",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/LightningInvoice" }
              }
            }
          },
          "400": { "description": "잘못된 요청" },
          "401": { "description": "인증 실패" },
          "403": { "description": "비활성 키, 주인장 아님, 또는 차단" },
          "404": { "description": "스토어 없음" }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer"
      }
    },
    "schemas": {
      "StoreShort": {
        "type": "object",
        "properties": {
          "id": { "type": "integer" },
          "store_id": { "type": "string" },
          "name": { "type": "string" }
        }
      },
      "Owner": {
        "type": "object",
        "properties": {
          "name": { "type": "string" },
          "phone": { "type": "string" },
          "email": { "type": "string" },
          "chat_channel": { "type": "string", "format": "uri" }
        }
      },
      "Product": {
        "type": "object",
        "properties": {
          "id": { "type": "integer" },
          "title": { "type": "string" },
          "thumbnail": { "type": ["string", "null"], "format": "uri" },
          "price": { "type": "integer" },
          "price_currency": { "type": "string" },
          "is_discounted": { "type": "boolean" },
          "discounted_price": { "type": ["integer", "null"] },
          "stock_quantity": { "type": "integer" },
          "is_out_of_stock": { "type": "boolean" },
          "created_at": { "type": "string", "format": "date-time" },
          "updated_at": { "type": "string", "format": "date-time" }
        }
      },
      "Meetup": {
        "type": "object",
        "properties": {
          "id": { "type": "integer" },
          "name": { "type": "string" },
          "date_time": { "type": ["string", "null"], "format": "date-time" },
          "location": { "type": "string" },
          "is_free": { "type": "boolean" },
          "price": { "type": "integer" },
          "is_discounted": { "type": "boolean" },
          "discounted_price": { "type": ["integer", "null"] },
          "status": { "type": "string" },
          "created_at": { "type": "string", "format": "date-time" },
          "updated_at": { "type": "string", "format": "date-time" }
        }
      },
      "LiveLecture": {
        "type": "object",
        "properties": {
          "id": { "type": "integer" },
          "name": { "type": "string" },
          "thumbnail": { "type": ["string", "null"], "format": "uri" },
          "date_time": { "type": ["string", "null"], "format": "date-time" },
          "price_mode": { "type": "string" },
          "price": { "type": "integer" },
          "is_discounted": { "type": "boolean" },
          "discounted_price": { "type": ["integer", "null"] },
          "is_free": { "type": "boolean" },
          "created_at": { "type": "string", "format": "date-time" },
          "updated_at": { "type": "string", "format": "date-time" }
        }
      },
      "DigitalFile": {
        "type": "object",
        "properties": {
          "id": { "type": "integer" },
          "name": { "type": "string" },
          "thumbnail": { "type": ["string", "null"], "format": "uri" },
          "price_mode": { "type": "string" },
          "price": { "type": "integer" },
          "is_discounted": { "type": "boolean" },
          "discounted_price": { "type": ["integer", "null"] },
          "created_at": { "type": "string", "format": "date-time" },
          "updated_at": { "type": "string", "format": "date-time" }
        }
      },
      "Store": {
        "type": "object",
        "properties": {
          "id": { "type": "integer" },
          "store_id": { "type": "string" },
          "name": { "type": "string" },
          "description": { "type": "string" },
          "owner": { "$ref": "#/components/schemas/Owner" },
          "products": { "type": "array", "items": { "$ref": "#/components/schemas/Product" } },
          "meetups": { "type": "array", "items": { "$ref": "#/components/schemas/Meetup" } },
          "live_lectures": { "type": "array", "items": { "$ref": "#/components/schemas/LiveLecture" } },
          "digital_files": { "type": "array", "items": { "$ref": "#/components/schemas/DigitalFile" } },
          "updated_at": { "type": "string", "format": "date-time" }
        }
      },
      "StoreOwner": {
        "type": "object",
        "properties": {
          "id": { "type": "integer" },
          "store_id": { "type": "string" },
          "name": { "type": "string" },
          "owner": { "$ref": "#/components/schemas/Owner" },
          "updated_at": { "type": "string", "format": "date-time" }
        }
      },
      "LightningInvoice": {
        "type": "object",
        "properties": {
          "store_id": { "type": "string" },
          "amount_sats": { "type": "integer" },
          "payment_request": { "type": "string" },
          "invoice_uri": { "type": "string", "format": "uri" },
          "payment_hash": { "type": "string" },
          "expires_at": { "type": ["string", "null"], "format": "date-time" }
        },
        "required": ["store_id", "amount_sats", "payment_request", "payment_hash"]
      }
    }
  }
}
